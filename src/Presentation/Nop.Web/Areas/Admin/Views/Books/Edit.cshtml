@model BooksModel

@inject AdminAreaSettings adminAreaSettings

@{
    //page title
    ViewBag.PageTitle = "EditBookDetails";
}

<form asp-controller="Books" asp-action="Edit" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @*@T("Admin.Customers.Customers.EditCustomerDetails") - @Model.LastName @Model.FirstName*@
            @Model.Name
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">BackToList</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                Save
            </button>
            <span id="book-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                Delete
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="book-delete" />